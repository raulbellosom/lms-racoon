############################################
# Racoon LMS — Environment Variables
# React + Vite + PWA + TailwindCSS 4.1
# Appwrite 1.8.2 RC2
############################################

# =============== Appwrite ===============
VITE_APPWRITE_ENDPOINT=https://appwrite.example.com/v1
VITE_APPWRITE_PROJECT_ID=project_id

# Database
VITE_APPWRITE_DATABASE_ID=lms

# =============== Collections (IDs) ===============
# Tip: usa el mismo ID que el "Collection ID" en Appwrite.
VITE_APPWRITE_COL_PROFILES=profiles
VITE_APPWRITE_COL_PASSWORD_RESET_TOKENS=passwordResetTokens
VITE_APPWRITE_COL_FAVORITES=favorites
VITE_APPWRITE_COL_COURSES=courses
VITE_APPWRITE_COL_COURSE_SECTIONS=courseSections
VITE_APPWRITE_COL_LESSONS=lessons
VITE_APPWRITE_COL_LESSON_TIMESTAMPS=lessonTimestamps
VITE_APPWRITE_COL_ENROLLMENTS=enrollments
VITE_APPWRITE_COL_LESSON_PROGRESS=lessonProgress
VITE_APPWRITE_COL_COURSE_STATS=courseStats
VITE_APPWRITE_COL_REVIEWS=reviews
VITE_APPWRITE_COL_COMMENTS=comments
VITE_APPWRITE_COL_CATEGORIES=categories
VITE_APPWRITE_COL_ASSIGNMENTS=assignments
VITE_APPWRITE_COL_SUBMISSIONS=submissions
VITE_APPWRITE_COL_QUIZZES=quizzes
VITE_APPWRITE_COL_QUIZ_QUESTIONS=quizQuestions
VITE_APPWRITE_COL_QUIZ_ATTEMPTS=quizAttempts
VITE_APPWRITE_COL_USER_PREFERENCES=userPreferences
VITE_APPWRITE_COL_NOTIFICATIONS=notifications
VITE_APPWRITE_COL_CART=cart
VITE_APPWRITE_COL_COUPONS=coupons
VITE_APPWRITE_COL_COUPON_REDEMPTIONS=couponRedemptions


# =============== Buckets (IDs) ===============
VITE_APPWRITE_BUCKET_AVATARS=avatars
VITE_APPWRITE_BUCKET_COURSE_COVERS=courseCovers
VITE_APPWRITE_BUCKET_LESSON_ATTACHMENTS=lessonAttachments
VITE_APPWRITE_BUCKET_SUBMISSION_ATTACHMENTS=submissionAttachments

# =============== Video API (MinIO + HLS) ===============
VITE_VIDEO_API_BASE_URL=http://localhost:3001

# =============== Functions (IDs) ===============
VITE_APPWRITE_FN_ON_USER_CREATED=onUserCreated
VITE_APPWRITE_FN_SYNC_USER_PROFILE=syncUserProfile
VITE_APPWRITE_FN_AUTH_HANDLER=authHandler
VITE_APPWRITE_FN_ON_REVIEW_CREATED=onReviewCreated
VITE_APPWRITE_FN_ON_COURSE_CREATED=onCourseCreated
VITE_APPWRITE_FN_ON_ENROLLMENT_CREATED=onEnrollmentCreated
VITE_APPWRITE_FN_CHECK_ABANDONED_CARTS=checkAbandonedCarts

# =============== PWA / App ===============
VITE_APP_NAME=Racoon LMS

# (Opcional) Si vas a generar URLs públicas de archivos (CDN/reverse proxy)
# ejemplo: https://appwrite.example.com/v1/storage/buckets
VITE_PUBLIC_FILES_BASE=https://appwrite.example.com/v1/storage/buckets

# =============== UX / Flags ===============
# Si no hay Appwrite configurado, la app corre con data demo.
VITE_DEMO_MODE=auto

# ============== Firebase ===============
VITE_FIREBASE_API_KEY=tu_api_key
VITE_FIREBASE_AUTH_DOMAIN=tu_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=tu_project_id
VITE_FIREBASE_STORAGE_BUCKET=tu_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=tu_sender_id
VITE_FIREBASE_APP_ID=tu_app_id
VITE_FIREBASE_MEASUREMENT_ID=tu_measurement_id
VITE_FIREBASE_VAPID_KEY=tu_vapid_key