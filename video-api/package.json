{
  "name": "racoon-video-api",
  "version": "1.0.0",
  "description": "Video upload and HLS transcoding service",
  "main": "index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "prod": "pm2 start index.js --name racoon-video-api --time --update-env",
    "prod:restart": "pm2 restart racoon-video-api --update-env",
    "prod:stop": "pm2 stop racoon-video-api",
    "prod:logs": "pm2 logs racoon-video-api"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "minio": "^7.1.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
